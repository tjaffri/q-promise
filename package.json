{
    "name": "quran-promise",
    "version": "0.0.7",
    "description": "ES6 promise enabled node module for the Holy Quran.",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/axis-tip/quran-promise.git"
    },
    "homepage": "https://axis-tip.github.io/quran-promise/",
    "author": "Axis, the Information Professionals.",
    "license": "MIT",
    "keywords": [
        "Quran",
        "Islam",
        "Muslim",
        "ES6",
        "Promises",
        "JavaScript",
        "Babel"
    ],
    "main": "index.js",
    "jsnext:main": "index.es6.js",
    "babel": {
        "presets": [
            "es2015",
            "stage-0"
        ],
        "plugins": [
            "transform-runtime"
        ]
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "extends": "airbnb/base"
    },
    "dependencies": {
        "app-root-dir": "^1.0.2",
        "babel-runtime": "^6.6.1",
        "fs-promise": "^0.5.0",
        "request-promise": "^4.1.1",
        "sqlite": "^2.2.0"
    },
    "devDependencies": {
        "babel-cli": "^6.8.0",
        "babel-core": "^6.8.0",
        "babel-eslint": "^6.0.4",
        "babel-plugin-transform-runtime": "^6.8.0",
        "babel-preset-es2015": "^6.6.0",
        "babel-preset-es2015-rollup": "^1.1.1",
        "babel-preset-stage-0": "^6.5.0",
        "babel-register": "^6.8.0",
        "bs-html-injector": "^3.0.3",
        "chai": "^3.5.0",
        "coveralls": "^2.11.9",
        "del": "^2.2.0",
        "eslint": "^2.9.0",
        "eslint-config-airbnb": "^8.0.0",
        "eslint-plugin-import": "^1.6.1",
        "eslint-plugin-jsx-a11y": "^1.0.4",
        "eslint-plugin-react": "^5.0.1",
        "fs-promise": "^0.5.0",
        "istanbul": "^1.0.0-alpha.2",
        "mocha": "^2.4.5",
        "rollup": "^0.26.2",
        "rollup-plugin-babel": "^2.4.0",
        "sinon": "^2.0.0-pre"
    },
    "scripts": {
        "build": "babel-node tools/build",
        "coveralls": "cat ./coverage/lcov.info | coveralls",
        "gendb": "babel-node tools/downloadAndImportCorpus.js",
        "lint": "eslint src test tools",
        "lint:fix": "eslint --fix src test tools",
        "publish:docs": "easystatic deploy docs --repo axis-tip/quran-promise",
        "start:docs": "easystatic start docs",
        "test": "mocha --compilers js:babel-register",
        "test:watch": "mocha --compilers js:babel-register --reporter min --watch",
        "test:cover": "babel-node ./node_modules/istanbul/lib/cli.js cover ./node_modules/mocha/bin/_mocha"
    },
    "bugs": {
        "url": "https://github.com/axis-tip/quran-promise/issues"
    }
}